{
  "$schema": "./node_modules/@skyux/config/skyuxconfig-schema.json",
  "mode": "easy",
  "compileMode": "aot",
  "name": "skyux-docs-tools",
  "plugins": [
    "@skyux-sdk/builder-plugin-skyux",
    "@blackbaud/skyux-builder-plugin-code-block"
  ],
  "app": {
    "styles": [
      "src/app/public/styles/docs-tools.scss"
    ],
    "theming": {
      "supportedThemes": ["default", "modern"],
      "theme": "default"
    }
  },
  "librarySettings": {
    "whitelistedNonPeerDependencies": [
      "@stackblitz/sdk",
      "marked"
    ]
  },
  "testSettings": {
    "unit": {
      "browserSet": "paranoid"
    }
  },
  "pipelineSettings": {
    "vsts": {
      "testSettings": {
        "e2e": {
          "browserSet": false
        },
        "unit": {
          "browserSet": false
        }
      }
    }
  },
  "host": {
    "frameOptions": {
      "none": true
    }
  }
}
